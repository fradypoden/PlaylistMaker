<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/indentation_4"
        android:paddingStart="@dimen/indentation_4"
        android:paddingEnd="52dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="64dp"
            android:paddingTop="10dp"
            android:paddingEnd="68dp"
            android:paddingBottom="@dimen/indentation_12"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/indentation_12"
            app:drawableStartCompat="@drawable/ic_arrow_back" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/indentation_16"
        android:paddingVertical="@dimen/indentation_8">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:background="@drawable/background_search"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:drawableTint="@color/dark_grey"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingVertical="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold">

        </EditText>
    </FrameLayout>


</LinearLayout>