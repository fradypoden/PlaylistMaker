<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/indentation_4"
        android:paddingStart="@dimen/indentation_4"
        android:paddingEnd="0dp">

        <TextView
            style="@style/text.noCaps.22sp.normal.black.ys_display_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="60dp"
            android:paddingTop="14dp"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/indentation_12"
            android:text="@string/search" />

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/indentation_16"
            app:drawableStartCompat="@drawable/ic_arrow_back" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/indentation_16"
        android:paddingVertical="@dimen/indentation_8">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:background="@drawable/background_search"
            android:drawableStart="@drawable/ic_search_small"
            android:drawablePadding="8dp"
            android:drawableTint="@color/dark_grey"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingVertical="10dp"
            android:paddingStart="13dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_grey"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textStyle="normal">
        </EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_vector"
            android:visibility="gone"
            app:tint="@color/dark_grey" />

    </FrameLayout>

</LinearLayout>