<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="text.15ems.1line" parent="">
        <item name="android:maxEms">15</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="text.noCaps.22sp.normal.black.ys_display_medium" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/blackOnWhite</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="text.noCaps.13dp.normal.blackOnWhite.ys_display_regular.ic_dark_grey" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/blackOnWhite</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="text.paddingV21.noCaps.16dp.normal.black.ys_display_regular.ic_dark_grey" parent="">
        <item name="android:paddingVertical">@dimen/indentation_21</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/blackOnWhite</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">?attr/darkGreyOnWhite</item>
    </style>

    <style name="text.paddingV21.noCaps.16dp.normal.black.ys_display_regular.ic_dark_grey.switchColors">
        <item name="android:thumbTint">?attr/darkGreyOnBlue</item>
        <item name="android:trackTint">?attr/greyOnLightBlue</item>
    </style>

    <style name="mainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/indentation_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/whiteOnWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">?attr/blackOnBlack</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/indentation_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/indentation_8</item>
        <item name="iconTint">?attr/blackOnBlack</item>
    </style>

</resources>
